            <div class="col-md-10">
                @Html.EditorFor(model => model.Max_Leave_Granted_Per_Month)
                @Html.ValidationMessageFor(model => model.Max_Leave_Granted_Per_Month)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
				@Html.ActionLink("Staff", "ViewStaffDetails", null, new { @class = "btn btn-white"})
