                @Html.ValidationMessageFor(model => model.Staff_Address)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Staff_Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Staff_Email)
                @Html.ValidationMessageFor(model => model.Staff_Email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Staff_Dob, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Staff_Dob)
                @Html.ValidationMessageFor(model => model.Staff_Dob)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Staff_ContactNumber, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
