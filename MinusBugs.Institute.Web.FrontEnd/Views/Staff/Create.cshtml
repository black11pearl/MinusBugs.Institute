                @Html.ValidationMessageFor(model => model.Staff_ContactNumber)
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group">
            @Html.LabelFor(model => model.Staff_Qualification, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Qualification", new List<SelectListItem> {
