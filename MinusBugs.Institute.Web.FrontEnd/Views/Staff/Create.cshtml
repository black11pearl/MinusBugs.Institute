            <div class="col-md-10">
                @Html.DropDownList("Designation",new List<SelectListItem> {
                new SelectListItem {Text="HOC",Value="HOC" },
                new SelectListItem {Text="Administrative Head",Value="Administrative Head" },
                new SelectListItem {Text="Senior Faculty",Value="Senior Faculty" },
                new SelectListItem {Text="Front Office Staff",Value="Front Office Staff" },
