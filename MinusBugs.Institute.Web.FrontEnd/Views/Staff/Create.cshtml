                new SelectListItem {Text="MCA",Value="MCA" },
                new SelectListItem {Text="MSc. Computer Science",Value="MSc. Computer Science" },
                new SelectListItem {Text="B.Tech",Value="B.Tech" },
                new SelectListItem {Text="M.Tech",Value="M.Tech" },
                new SelectListItem {Text="BCom",Value="BCom" },
                new SelectListItem {Text="BBA",Value="BBA" },
                new SelectListItem {Text="MCom",Value="MCom" },
                new SelectListItem {Text="MBA",Value="MBA" }

                }
                , "Select Qualification", new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.Staff_Designation)
